// Place your key bindings in this file to override the defaultsauto[]
[
  { "key": "ctrl+tab",            "command": "workbench.action.nextEditor",                   "when": "editorFocus" },
  { "key": "ctrl+shift+tab",      "command": "workbench.action.previousEditor",               "when": "editorFocus" },

  // move between editor, sidebar, terminal
  { "key": "ctrl+w ctrl+j",       "command": "workbench.action.terminal.focus",               "when": "editorFocus"},
  { "key": "ctrl+w ctrl+h",       "command": "workbench.action.focusSideBar",                 "when": "editorFocus"},
  { "key": "ctrl+w ctrl+k",       "command": "workbench.action.focusActiveEditorGroup",       "when": "terminalFocus"},
  { "key": "ctrl+w ctrl+l",       "command": "workbench.action.focusActiveEditorGroup",       "when": "sideBarFocus"},

  // toggle terminal size
  { "key": "ctrl+w ctrl+k",       "command": "workbench.action.closePanel",                   "when": "editorFocus"},
  { "key": "ctrl+w ctrl+j",       "command": "workbench.action.toggleMaximizedPanel",         "when": "panelFocus"},

  // Cycle through VSCode Activity Bar icons
  { "key": "ctrl+j",              "command": "workbench.action.nextSideBarView",              "when": "sideBarFocus" },
  { "key": "ctrl+k",              "command": "workbench.action.previousSideBarView",          "when": "sideBarFocus" },
  // Cycle through bottom panel/terminal
  { "key": "ctrl+tab",            "command": "workbench.action.nextPanelView",                "when": "panelFocus" },
  { "key": "ctrl+shift+tab",      "command": "workbench.action.previousPanelView",            "when": "panelFocus" },
  { "key": "ctrl+j",              "command": "workbench.action.terminal.focusNext",           "when": "terminalFocus" },
  { "key": "ctrl+k",              "command": "workbench.action.terminal.focusPrevious",       "when": "terminalFocus" },
  { "key": "ctrl+n",              "command": "workbench.action.terminal.new",                 "when": "terminalFocus" },
]