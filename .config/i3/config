set $mod Mod4
#set $lock 'swaylock -f -i /usr/share/backgrounds/archlinux/conference.png'
set $lock 'swaylock -f -i /usr/share/backgrounds/archlinux/small.png'


# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Cica 14

floating_modifier $mod

# auto start
exec --no-startup-id nm-applet --indicator
exec --no-startup-id fcitx5

# wallpaper
output * bg /usr/share/backgrounds/archlinux/small.png fill

# start a terminal
bindsym $mod+Shift+Return   exec alacritty
bindsym --release $mod+Shift+s  exec slurp | grim -g - /tmp/$(date +'screenshot_%Y-%m-%d-%H%M%S.png')
bindsym --release $mod+Shift+d  exec grim -g "$(slurp; sleep 5)" /tmp/$(date +'screenshot_%Y-%m-%d-%H%M%S.png')
bindsym --release $mod+Ctrl+l  exec  $lock

# kill focused window
bindsym $mod+Shift+c        kill

# start dmenu (a program launcher)
bindsym $mod+p              exec bemenu-run --fn Cica-9 -p "â–¶" | xargs swaymsg exec

### Idle configuration
exec swayidle -w \
          timeout 1800 $lock \
          timeout 2000 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
          before-sleep $lock

# change focus
bindsym $mod+h              focus left
bindsym $mod+j              focus down
bindsym $mod+k              focus up
bindsym $mod+l              focus right

# move focused window
bindsym $mod+Shift+h        move left
bindsym $mod+Shift+j        move down
bindsym $mod+Shift+k        move up
bindsym $mod+Shift+l        move right

# horizontal / vertical / fullscreen
bindsym $mod+c              split h
bindsym $mod+v              split v
bindsym $mod+f              fullscreen toggle

# change container layout
bindsym $mod+a              layout tabbed
bindsym $mod+s              layout stacking
bindsym $mod+d              layout toggle split

# tiling / floating
bindsym $mod+Shift+space    floating toggle
bindsym $mod+space focus    mode_toggle

# focus the parent / child container
bindsym $mod+o              focus parent
bindsym $mod+i              focus child

# scratchpad
bindsym $mod+Shift+g        move scratchpad
bindsym $mod+g              scratchpad show

# workspace
# ```swaymsg -t get_outputs``` shows display identifier
set $leftscreen       HDMI-A-1
set $centerscreen     DP-1
output $leftscreen    pos    0   0 mode 1920x1080@60.000Hz  transform 270
#output $leftscreen    pos    0   0 mode 2560x1440@60.000Hz  transform 0
#output $centerscreen  pos 1080 200 mode 2560x1440@165.080Hz
output $centerscreen  pos 1080 200 mode 2560x1440@143.912Hz
#output $centerscreen  pos 1080 200 mode 2560x1440@60.014Hz

workspace 1                 output $leftscreen
workspace 2                 output $leftscreen
workspace 3                 output $leftscreen
workspace 4                 output $leftscreen
workspace 5                 output $leftscreen
workspace 6                 output $centerscreen
workspace 7                 output $centerscreen
workspace 8                 output $centerscreen
workspace 9                 output $centerscreen
workspace 10                output $centerscreen

bindsym $mod+1              workspace 1
bindsym $mod+2              workspace 2
bindsym $mod+3              workspace 3
bindsym $mod+4              workspace 4
bindsym $mod+5              workspace 5
bindsym $mod+6              workspace 6
bindsym $mod+7              workspace 7
bindsym $mod+8              workspace 8
bindsym $mod+9              workspace 9
bindsym $mod+0              workspace 10

bindsym $mod+Shift+1        move container to workspace 1
bindsym $mod+Shift+2        move container to workspace 2
bindsym $mod+Shift+3        move container to workspace 3
bindsym $mod+Shift+4        move container to workspace 4
bindsym $mod+Shift+5        move container to workspace 5
bindsym $mod+Shift+6        move container to workspace 6
bindsym $mod+Shift+7        move container to workspace 7
bindsym $mod+Shift+8        move container to workspace 8
bindsym $mod+Shift+9        move container to workspace 9
bindsym $mod+Shift+0        move container to workspace 10

# reload / restart
bindsym $mod+Shift+r          reload
bindsym $mod+Shift+asciitilde restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+q exec  "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes' 'i3-msg exit'"
bindsym $mod+Shift+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# volume
#bindsym XF86AudioRaiseVolume  exec amixer -q set Master 2%+ unmute
#bindsym XF86AudioLowerVolume  exec amixer -q set Master 2%- unmute
#bindsym XF86AudioMute         exec amixer -q set Master toggle

# resize
mode "resize" {
  bindsym h       resize shrink width   10 px or 10 ppt
  bindsym j       resize grow   height  10 px or 10 ppt
  bindsym k       resize shrink height  10 px or 10 ppt
  bindsym l       resize grow   width   10 px or 10 ppt
  bindsym Return  mode "default"
  bindsym Escape  mode "default"
}
bindsym $mod+r              mode "resize"

# i3bar
bar {
  icon_theme Adwaita
  mode dock
  position top
  status_command i3status -c $HOME/.config/i3/i3status.conf
}

# input
# use wev the sway event monitor that is a replacement for xev, 
# or libinput debug-events
# Get device name via swaymsg -t get_inputs
input "1133:49278:Logitech_Gaming_Mouse_G402" {
  accel_profile "flat"
  pointer_accel -0.5
}
input "1133:45084:G603_Mouse" {
  accel_profile "flat"
  pointer_accel -0.20
}
input "1386:891:Wacom_One_by_Wacom_M_Pen" {
  map_to_output DP-1
}



# misc
hide_edge_borders smart
focus_follows_mouse no
mouse_warping none
#border normal 1

exec thunderbird
exec firefox

include /etc/sway/config.d/*
